<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/items_outer_margin"
    app:cardCornerRadius="@dimen/item_corner_radius"
    app:contentPadding="@dimen/content_padding">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_view_movie_thumb_nail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_result_image_height"
            android:scaleType="centerCrop"
            android:background="@color/color_item_image_view_bg_color"
            android:contentDescription="@string/content_description_movie_image"
            android:layout_marginBottom="@dimen/margin_small"/>


        <!-- movie title -->
        <TextView
            android:id="@+id/text_view_movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_small"
            android:textColor="@android:color/black"/>

        <!-- ratings and released year -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_small">

            <!-- movie released year -->
            <TextView
                android:id="@+id/text_view_release_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@android:color/black"/>

            <!-- movie ratings -->
            <TextView
                android:id="@+id/text_view_ratings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="@android:color/black"/>
        </FrameLayout>

        <!-- movie overview -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="@string/text_movie_overview"
            android:layout_marginBottom="@dimen/xsmall_padding"/>
        <TextView
            android:id="@+id/text_view_movie_overview"
            android:textSize="@dimen/x_text_size_small"
            android:lineSpacingExtra="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</android.support.v7.widget.CardView>
