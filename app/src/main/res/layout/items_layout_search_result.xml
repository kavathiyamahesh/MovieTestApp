<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/image_view_movie_thumb_nail"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:background="@color/color_item_image_view_bg_color"
        android:contentDescription="@string/content_description_movie_image"
        android:layout_marginBottom="8dp"/>


    <!-- movie title -->
    <TextView
        android:id="@+id/text_view_movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Avengers"
        android:paddingBottom="8dp"/>

    <!-- ratings and released year -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- movie released year -->
        <TextView
            android:id="@+id/text_view_release_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:gravity="start"
            android:text="2009"/>

        <!-- movie ratings -->
        <TextView
            android:id="@+id/text_view_ratings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="end"
            android:text="ratings: 9.8/10"/>
    </FrameLayout>

    <!-- movie overview -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="@string/text_movie_overview"/>
    <TextView
        android:id="@+id/text_view_movie_overview"
        android:textSize="18.0sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>