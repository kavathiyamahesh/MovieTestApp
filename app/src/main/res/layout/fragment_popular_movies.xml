<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_popular_movies"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:background="@color/color_popular_movies_bg"/>

    <!-- loading progress -->
    <ProgressBar
        android:id="@+id/progress_bar_indeterminate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <include layout="@layout/pagination_indeterminate_progress_bar" />

</FrameLayout>